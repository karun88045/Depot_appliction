<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-10 col-sm-12 mx-auto shadow-lg p-3">
      <p style="color: green"><%= notice %></p>
      <%= render @product %>
      <div>
        <%= link_to "Edit this product", edit_product_path(@product) %> |
        <%= link_to "Back to products", products_path %>
        <%= button_to "Destroy this product", @product, method: :delete, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>