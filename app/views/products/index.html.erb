<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 mx- shadow-lg">
      <% if notice %>
    <aside id="notice"><%= notice %></aside>
    <% end %>
    <table class="table table-stripped table-hover">
      <tfoot>
      <tr>
        <td colspan="3">
          <%= link_to 'New Product', new_product_path %>
        </td>
      </tr>
      </tfoot>
      <tr>
        <th>Id</th>
        <th>Product Title</th>
        <th>Image</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= image_tag(product.image_url, class: 'list_image',width:50 ,height:50) %></td>
        <td><%= truncate(strip_tags(product.description),
        length: 80) %></td>
        <td>
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy',
          product,
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
</div>