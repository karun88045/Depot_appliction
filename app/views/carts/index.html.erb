


<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-lg-8 col-sm-12 mx-auto shadow-lg p-3 hello mb-2 mx-2">
        <p style="color: green"><%= notice %></p>

        <h1>Carts</h1>

        <div id="carts">
        <% @carts.each do |cart| %>
        <%= render cart %>
        <div class="d-flex">
          <p><%= link_to "Show this cart", cart_path(cart), class: 'btn btn-warning mx-2' %></p>
          <p><%= button_to "Delete this cart", cart_path(cart), method: :delete, class: 'btn btn-danger mx-2' %></p>
          <p><%= link_to "Edit this cart", edit_cart_path(cart), class: 'btn btn-success mx-2' %></p>
        </div>
        <% end %>
        </div>

        <%= link_to "New cart", new_cart_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
