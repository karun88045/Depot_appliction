



<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-lg-8 col-sm-12 mx-auto shadow-lg p-3 hello mb-2 mx-2">

      <div class="row">
        <div class="col-md-4 col-lg-4 col-sm-12">
          <p style="color: green"><%= notice %></p>
          <h1>Line items</h1>
          <div id="line_items">
          <% @line_items.each do |line_item| %>
          <%= render line_item %>
          <p>
          <%= link_to "Show this line item", line_item, class: 'btn btn-warning' %>
          </p>
          <% end %>
          </div>
          <%= link_to "New line item", new_line_item_path, class: 'btn btn-primary' %>
        </div>
      </div>
      
    </div>
  </div>
</div>
