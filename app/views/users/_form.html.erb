<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 mx-auto shadow-lg p-3 hello mb-2 mx-2">
      <div class="depot_form">
        <%= form_with(model: user, local: true) do |form| %>
        <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <h2>Enter User Details</h2>
        <div class="field my-2">
          <%= form.label :name, 'Name:' %>
          <%= form.text_field :name, size: 40, class: 'form-control' %>
        </div>
        <div class="field my-2">
          <%= form.label :password, 'Password:' %>
          <%= form.password_field :password, size: 40, class: 'form-control' %>
        </div>
        <div class="field my-2">
          <%= form.label :password_confirmation, 'Confirm:' %>
          <%= form.password_field :password_confirmation,
          id: :user_password_confirmation,
          size: 40, class: 'form-control' %>
        </div>
        <div class="actions my-2">
          <%= form.submit class: 'form-control btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>