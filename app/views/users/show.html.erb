
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-lg-8 col-sm-12 mx-auto shadow-lg p-3 hello mb-2 mx-2">
       <p style="color: green"><%= notice %></p>
      <%= render @user %>
      <div class="d-flex flex-row">
        <%= link_to "Edit this user", edit_user_path(@user), class: 'btn btn-primary mx-2' %> |
        <%= link_to "Back to users", users_path, class: 'btn btn-success mx-2' %>
        <%= button_to "Destroy this user", @user, method: :delete, class: 'btn btn-danger mx-2' %>
      </div>
    </div>
  </div>
</div>